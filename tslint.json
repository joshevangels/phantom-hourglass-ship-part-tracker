{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "jsRules": {},
    "rules": {
        "semicolon": [
            true,
            "always",
            "ignore-bound-class-methods"
        ],
        "jsx-no-lambda": false,
        "jsx-wrap-multiline": false,
        "max-line-length": [
            true,
            {
                "limit": 120,
                "ignore-pattern": "^import |^export {(.*?)} | <path"
            }
        ],
        "object-literal-key-quotes": false,
        "object-literal-sort-keys": false
    },
    "rulesDirectory": []
}